{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "commonjs": true
    },
    "globals": {},
    "extends": [
        "airbnb-base"
    ],
    "rules": {
        "no-useless-catch": "off",
        "prefer-destructuring" : 0,
        "no-underscore-dangle": [
            2, { 
                "allow": [ "__", "_id", "__typename" ] 
            }
        ],
        "comma-dangle": [
            2,
            "never"
        ],
        "semi": [
            "error",
            "always"
        ],
        "global-require": 0,
        "arrow-body-style": 0,
        "no-trailing-spaces": 0,
        "indent": [
            "warn",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "no-var": [
            "warn"
        ],
        "no-unused-vars": [
            "warn"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 1
            }
        ],
        "max-len": [
            "warn",
            300
        ],
        "no-mixed-operators": "off",
        "no-param-reassign": "off",
        "class-methods-use-this": "off",
        "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 10 }],
        "import/no-dynamic-require": "off"
    }
}